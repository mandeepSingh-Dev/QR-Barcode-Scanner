<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/splashCardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/itemiconcolor"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="20dp"
            android:src="@drawable/qrcode_splash"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/splashTetxView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Scan QR &amp; Barcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/splashCardview"
        android:textAlignment="center"
        android:textColor="@color/Modecolor"
        tools:ignore="RtlCompat" />


